<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/news_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="6dp"
              android:background="@color/transparent_white_90_percent"

              android:orientation="horizontal">

    <ImageView
        android:id="@+id/news_avatart"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/leak_canary_icon"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fuck_title"
            android:textSize="18sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/news_used_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已使用:123123"/>

            <TextView
                android:id="@+id/news_timestamps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="10分钟前"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>